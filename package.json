{
  "name": "learnmyway-chrome-extension",
  "version": "1.0.0",
  "description": "Turn long documentation pages into micro-lessons delivered in 10-minute focus sprints",
  "type": "module",
  "scripts": {
    "dev:panel": "vite --config config/vite.panel.config.ts",
    "dev:worker": "tsx --watch extension/service_worker.ts",
    "build": "pnpm run build:panel && pnpm run build:worker && pnpm run build:content && pnpm run copy-manifest",
    "build:panel": "vite build --config config/vite.panel.config.ts",
    "build:worker": "node config/build-worker.mjs",
    "build:content": "node config/build-content.mjs",
    "copy-manifest": "node config/copy-manifest.mjs",
    "zip": "node config/zip-extension.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "dompurify": "^3.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.262",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "@types/jsdom": "^21.1.6",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
